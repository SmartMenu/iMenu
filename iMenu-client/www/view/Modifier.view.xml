<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout" xmlns="sap.m" controllerName="com.h3.prj.imenu.view.Modifier"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Popover id="modifierPopover" showHeader="false" placement="Auto"
		modal="true">
		<content>
			<l:Grid id="modifierGrid" width="36em" defaultSpan="L3 M3 S3">
			</l:Grid>
		</content>
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button text="{l10n>/ok}" press="onModifierConfirmPressed"/>
			</Toolbar>
		</footer>
	</Popover>
</core:View>
