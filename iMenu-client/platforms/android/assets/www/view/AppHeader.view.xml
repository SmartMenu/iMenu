<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" controllerName="com.h3.prj.imenu.view.AppHeader"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Toolbar design="Transparent">
		<Button icon="img/logo_32x32.png" densityAware="false" />
		<Label text="{com.h3.prj.imenu.model.l10n>/restaurant/name}" class="brandName" />
		<ToolbarSpacer />
		<SegmentedButton id="languageButton" select="onLanguageButtonSelect">
		</SegmentedButton>
		<Button id="settingsButton" icon="sap-icon://action-settings" press="onSettingsButtonPressed" />
	</Toolbar>
</core:View>